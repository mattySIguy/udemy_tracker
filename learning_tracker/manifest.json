{
  "manifest_version": 3,
  "name": "Learning Progress Tracker",
  "version": "1.0",
  "description": "Track daily learning time on specified sites and display streaks.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "activeTab",
    "idle"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html"
} 